<h1> USER SIGN UP PAGE </h1>

<%= form_for(@user) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :password %>
    <%= f.text_field :password %>
    <%= f.submit %>
<% end %>

<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <p style ="color: red"><%= error %></p>
    <% end %>
<% end %>